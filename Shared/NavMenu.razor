@using Data;
@using Services;
@inject UserHandler userHandler;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorAppz</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

@if(@currentUser != null)
{
    @if (@currentUser.Access == Access.Admin)
    {
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <nav class="flex-column">
                <div hidden="@Hide" class=" nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
            </nav>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="allusers">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Users
            </NavLink>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="getalllists">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Se alla listor i systemet
            </NavLink>
        </div>
        <div hidden="@(!Hide)" class="nav-item px-3">
            <NavLink class="nav-link" href="signup">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Skapa konto
            </NavLink>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="myprofile">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Min profil
            </NavLink>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="mylists">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Mina listor
            </NavLink>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="mylists">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Logga ut
            </NavLink>
        </div>
    }
    else
    {
        <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
            <nav class="flex-column">
                <div hidden="@Hide" class=" nav-item px-3">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div hidden="@Hide" class="nav-item px-3">
                    <NavLink class="nav-link" href="createnewtodolist">
                        <span class="oi oi-plus" aria-hidden="true"></span> Skapa ny lista
                    </NavLink>
                </div>
            </nav>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="myprofile">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Min profil
            </NavLink>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="mylists">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Mina listor
            </NavLink>
        </div>
        <div hidden="@Hide" class="nav-item px-3">
            <NavLink class="nav-link" href="logout">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Logga ut
            </NavLink>
        </div>

    }
}

@if(currentUser == null)
{
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div hidden="@(!Hide)" class=" nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Skapa konto
            </NavLink>
        </div>
        </nav>
    </div>
}


@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    [Parameter]
    public bool Hide { get; set; }

    [Parameter]
    public CreateUser? currentUser { get; set; } = new();

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }


}
